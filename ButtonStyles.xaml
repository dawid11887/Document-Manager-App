<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 Kolory -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#5094A3"/>
    <SolidColorBrush x:Key="PrimaryBrushHover" Color="#2F6CA1"/>
    <SolidColorBrush x:Key="PrimaryBrushDEL" Color="#FF4B5C"/>
    <SolidColorBrush x:Key="PrimaryBrushHoverDEL" Color="#7C262F"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>

    <!-- 🎨 Styl dla przycisków akcji -->
    <!-- PRZYCISKI ZWYKŁE-->
    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrushHover}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="2" Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.9"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#B0B0B0"/>
                            <Setter Property="Opacity" Value="0.6"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                            <Setter Property="Effect" Value="{x:Null}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- PRZYCISKI DELETE -->
