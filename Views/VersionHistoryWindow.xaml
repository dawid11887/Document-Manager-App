<Window x:Class="DocumentManagerApp.Views.VersionHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentManagerApp"
        mc:Ignorable="d"
        Title="Historia wersji dokumentu" Height="450" Width="700"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        ResizeMode="NoResize" WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF24527A" Offset="0.0"/>
            <GradientStop Color="#FF5DACBD" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="Gray" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#214866">
                <local:CustomTitleBarMini/>
            </Grid>

            <Border Grid.Row="1" CornerRadius="12" Background="#FAFAFA" Margin="20">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="InfoWindow" Grid.Row="0" Margin="0,0,0,10" FontWeight="SemiBold" FontSize="14" Text="Historia wersji dla dokumentu: ..."/>

                    <DataGrid x:Name="VersionHistoryDataGrid" Grid.Row="1" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single"
                              HeadersVisibility="Column" GridLinesVisibility="None"
                              RowHeight="40" FontSize="14" FontFamily="Segoe UI" AlternatingRowBackground="#F9F9F9"
                              Background="White" BorderThickness="1" BorderBrush="#DDD">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1C3B55"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="8"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E6F2FA"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#CCE5FF"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Wersja" Binding="{Binding Version}" Width="Auto" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Nazwa pliku" Binding="{Binding FileName}" Width="Auto"/>
                            <DataGridTextColumn Header="Data dodania" Binding="{Binding DateAdded, StringFormat='dd.MM.yyyy HH:mm'}" Width="Auto"/>
                            <DataGridCheckBoxColumn Header="Aktywna" Binding="{Binding IsActive}" Width="Auto"/>
                            <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" Content="Zamknij" FontWeight="Bold" IsCancel="True" Click="CloseButton_Click" Style="{StaticResource DialogButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>