<UserControl x:Class="DocumentManagerApp.Views.ChangeLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="540" Width="650">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#5094A3"/>
        <SolidColorBrush x:Key="PrimaryBrushHover" Color="#2F6CA1"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <DockPanel Margin="10">
        <!-- Nagłówek -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="⬅ Powrót" 
                    Width="100" Height="32" 
                    FontWeight="Bold" 
                    Click="Back_Click" 
                    Style="{StaticResource ActionButtonStyle}"/>
            <TextBlock Text="Logi systemowe" 
                       VerticalAlignment="Center" 
                       FontSize="16" FontWeight="SemiBold" 
                       Foreground="White" 
                       Margin="10,0,0,0"/>
        </StackPanel>
        <!-- Pasek filtrów -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Filtruj:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" Foreground="White" />
            <!-- Filtr użytkownika -->
            <TextBox x:Name="UserFilterBox"
                 Width="180" Margin="0,0,10,0"
                 ToolTip="Filtruj po nazwie użytkownika"
                 TextChanged="Filter_Changed" Tag="Filtruj po nazwie użytkownika" Style="{StaticResource TextBoxWithPlaceholderStyle}"/>
            <!-- Filtr akcji -->
            <ComboBox x:Name="ActionFilterBox" Width="185" Margin="0,0,10,0" SelectionChanged="Filter_Changed" Padding="6,8" FontSize="11">
                <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                <ComboBoxItem Content="Dodano obiekt"/>
                <ComboBoxItem Content="Edytowano obiekt"/>
                <ComboBoxItem Content="Usunięto obiekt"/>
                <ComboBoxItem Content="Dodano dokument"/>
                <ComboBoxItem Content="Dodano nową wersję dokumentu"/>
                <ComboBoxItem Content="Usunięto dokument (wszystkie wersje)"/>
                <ComboBoxItem Content="Inne"/>
            </ComboBox>
            <!-- Filtr daty -->
            <ComboBox x:Name="DateFilterBox" Width="110" Margin="0,0,10,0" SelectionChanged="Filter_Changed" Padding="6,8" FontSize="11">
                <ComboBoxItem Content="Wszystkie daty" IsSelected="True"/>
                <ComboBoxItem Content="Ostatnie 7 dni"/>
                <ComboBoxItem Content="Ostatnie 30 dni"/>
            </ComboBox>
            <!-- Reset filtrów -->
            <Button Content="Wyczyść" Width="80" Height="32" FontWeight="Bold"
                Click="ClearFilters_Click"
                Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
        <!-- Lista logów -->
        <DataGrid x:Name="ChangeLogDataGrid" AutoGenerateColumns="False" Margin="0"
          HeadersVisibility="Column" GridLinesVisibility="None" CanUserAddRows="False" IsReadOnly="True"
          RowHeight="35" FontSize="10" FontFamily="Segoe UI" AlternatingRowBackground="#F9F9F9"
          SelectionMode="Single" SelectionUnit="FullRow" Background="White" BorderThickness="1" BorderBrush="#DDD">
            <DataGrid.Resources>
                <!-- Styl nagłówków -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#214866"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
                <!-- Styl wierszy -->
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="4"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E6F2FA"/>
                        </Trigger>
                        <!-- Zaznaczenie -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#CCE5FF"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding Timestamp}" Width="Auto"/>
                <DataGridTextColumn Header="Użytkownik" Binding="{Binding UserName}" Width="Auto"/>
                <DataGridTextColumn Header="Akcja" Binding="{Binding Action}" Width="Auto"/>
                <DataGridTextColumn Header="Obiekt" Binding="{Binding Target}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
