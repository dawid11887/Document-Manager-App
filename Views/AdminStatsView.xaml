<UserControl x:Class="DocumentManagerApp.Views.AdminStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="540" Width="650">
    <UserControl.Resources>
        <!-- 🎨 Kolory -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#5094A3"/>
        <SolidColorBrush x:Key="PrimaryBrushHover" Color="#2F6CA1"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>

        <!-- 🎨 Styl dla przycisków akcji -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border CornerRadius="12" Padding="0" Background="#214866" Margin="30,20,30,20">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" >
            <!-- Tytuł -->
            <TextBlock Text="Statystyki systemu" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" TextBlock.Foreground="White"/>
            <!-- Sekcja: podstawowe statystyki -->
            <GroupBox Header="Podstawowe informacje" Margin="0,0,0,10" TextBlock.Foreground="White">
                <StackPanel Margin="10">
                    <TextBlock x:Name="UsersCountText" FontSize="14" Margin="0,5" Text="Użytkownicy: 0" />
                    <TextBlock x:Name="ObjectsCountText" FontSize="14" Margin="0,5" Text="Obiekty: 0" />
                    <TextBlock x:Name="DocumentsCountText" FontSize="14" Margin="0,5" Text="Dokumenty: 0" />
                </StackPanel>
            </GroupBox>
            <!-- Sekcja: aktywność -->
            <GroupBox Header="Aktywność w ostatnim czasie" Margin="0,0,0,10" TextBlock.Foreground="White">
                <StackPanel Margin="10">
                    <TextBlock x:Name="Documents7DaysText" FontSize="14" Margin="0,5" Text="Dokumenty w ostatnich 7 dniach: 0" />
                    <TextBlock x:Name="Documents30DaysText" FontSize="14" Margin="0,5" Text="Dokumenty w ostatnich 30 dniach: 0" />
                    <TextBlock x:Name="ObjectsWithoutDocsTextBlock" FontSize="14" Margin="0,5" Text="Obiekty bez dokumentów: 0" />
                </StackPanel>
            </GroupBox>
            <!-- Sekcja: zajętość dysku -->
            <GroupBox Header="Dysk" TextBlock.Foreground="White">
                <StackPanel Margin="10">
                    <TextBlock x:Name="DiskUsageTextBlock" FontSize="14" Margin="0,5" Text="Zajętość dysku: 0 MB" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                <Button Content="Zarządzaj użytkownikami" 
                    Width="200"
                    Height="40"
                    Margin="0,0,5,0"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    IsDefault="True"
                    Click="ManageUsers_Click"                
                    Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Logi systemowe" 
                    Width="200"
                    Height="40"
                    Margin="5,0,5,0"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    IsDefault="True"
                    Click="OpenLogs_Click"
                    Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Zamknij" 
                    Width="100"
                    Height ="40"
                    Margin="5,0,5,0"                 
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    IsDefault="True"
                    Click="CloseButton_Click"
                    Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
    </StackPanel>
    </Border>
</UserControl>

